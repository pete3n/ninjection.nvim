{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime.version": "LuaJIT",
  "runtime.path": ["lua/?.lua", "lua/?/init.lua", "plugin/?.lua"],
  "diagnostics": {
    "globals": ["vim"],
    "ignoredFiles": "Disable",
    "libraryFiles": "Disable"
  },
  "workspace": {
    "library": [
      "/usr/local/share/nvim/runtime/lua",
      "$(pwd)/.ci/neovim/share/nvim/runtime/lua",
      "$(pwd)/.ci/vendor/pack/vendor/start/nvim-treesitter/lua"
    ]
  }
}
